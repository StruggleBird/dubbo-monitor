<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="monitor">
    
    <!-- Add -->
    <insert id="addApplication" parameterType="com.handu.open.dubbo.monitor.domain.Application">
        insert into
        application (     name  )
        values(           #{name} )
        <selectKey keyProperty="id" resultType="java.lang.Long">
	    	SELECT LAST_INSERT_ID()
	    </selectKey>
    </insert>


    <select id="getAllApplication" resultType="com.handu.open.dubbo.monitor.domain.Application">
        SELECT id, name FROM application
    </select>
</mapper>